{
	"name": "lhci-gist-ci",
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"test": "jest",
		"test:watch": "jest --watch",
		"lhci": "lhci autorun",
		"lhci:mobile": "lhci autorun --config=.lighthouserc.mobile.cjs",
		"lhci:desktop": "lhci autorun --config=.lighthouserc.desktop.cjs",
		"lhci:all": "npm run lhci:mobile && npm run lhci:desktop",
		"upload-gist": "node --loader ts-node/esm src/upload-gist.ts --gist=$LIGHTHOUSE_GIST_ID"
	},
	"devDependencies": {
		"@jest/globals": "^30.0.4",
		"@lhci/cli": "^0.15.0",
		"@types/jest": "^30.0.0",
		"@types/node": "^24.0.10",
		"@types/yargs": "^17.0.33",
		"jest": "^30.0.4",
		"ts-jest": "^29.4.0",
		"ts-node": "^10.9.2",
		"typescript": "^5.8.3"
	},
	"dependencies": {
		"@octokit/rest": "^20.0.0",
		"node": "^22.17.0",
		"yargs": "^17.0.0"
	}
}